{

  "manifest_version": 2,
  "name": "Chrome Download Helper",
  "description": "This extension is a download helper. It opens the last available download or the default download directory.",
  "version": "0.2",
  "permissions": ["downloads", "downloads.open"],
  "background": {
    "scripts": ["assets/js/background.js"]
  },
  "icons": {
    "128": "./assets/images/icon.png"
  },
  "commands": {
    "open-download-dir": {
      "suggested_key": {
        "default": "Alt+O"
      },
      "description": "Open Download Directory"
    },
    "open-last-downlaod": {
      "suggested_key": {
        "default": "Alt+L"
      },
      "description": "Open Last Download"
    }
  }
}
